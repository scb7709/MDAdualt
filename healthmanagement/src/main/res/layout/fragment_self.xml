        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignBottom="@+id/textView50"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_comment" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/imageView8"
                android:gravity="bottom"
                android:lines="1"
                android:text="用户反馈"
                android:textColor="#999999"
                android:textSize="12sp" />

            <Button
                android:id="@+id/e"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/imageView8"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/icon_right_arrow" />

            <Button
                android:id="@+id/bt_fankui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView50"
                android:background="#00000000" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@mipmap/icon_about" />

            <TextView
                android:id="@+id/textView500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="关于我们"
                android:textColor="#999999"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <Button
                android:id="@+id/ee"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/icon_right_arrow" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:src="@drawable/icon_quit" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/imageView"
                android:gravity="bottom"
                android:lines="1"
                android:text="退出账号"
                android:textColor="#999999"
                android:textSize="12sp" />

            <Button
                android:id="@+id/f"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/textVie"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/icon_right_arrow"
                android:onClick="exit" />

            <Button
                android:id="@+id/bt_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textVie"
                android:background="#00000000" />
        </RelativeLayout>


