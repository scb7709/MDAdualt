        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageVie"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:src="@drawable/icon_about" />


            <TextView
                android:id="@+id/tex"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageVie"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/imageVie"
                android:gravity="bottom"
                android:lines="1"
                android:text="检查更新"
                android:textColor="#999999"
                android:textSize="12sp" />

            <Button
                android:id="@+id/c"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/imageVie"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/icon_right_arrow" />

            <Button
                android:id="@+id/bt_aboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tex"
                android:background="#00000000" />

            <TextView
                android:id="@+id/hasNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:layout_toStartOf="@+id/c"
                android:gravity="bottom"
                android:lines="1"
                android:text="有新版本"
                android:textColor="#ffad00"
                android:visibility="visible"
                android:textSize="12sp" />
        </RelativeLayout>

