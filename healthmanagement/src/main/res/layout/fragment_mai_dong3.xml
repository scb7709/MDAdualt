                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="中强度运动(128)"
                    android:textColor="#8ad6f1"
                    android:textSize="12dp"
                    android:layout_alignBottom="@+id/textView30"
