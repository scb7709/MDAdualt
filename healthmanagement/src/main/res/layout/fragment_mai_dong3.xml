<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekcircle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.lam.maidong.fragment.MaiDongActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/pane"
        android:layout_height="match_parent">

        <!--以上是数据统计部分-->
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="#ffad00"
            android:id="@+id/relativeLayout3">

            <Button
                android:id="@+id/btback"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/today"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_back"
                android:onClick="back"
                android:textColor="#fafafa"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/statechange"
                android:layout_toStartOf="@+id/statechange"
                android:text=""
                android:textColor="#8ad6f1"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/statechange"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="运动中"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/today"

                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toEndOf="@+id/statechange"
                android:layout_toRightOf="@+id/statechange"
                android:text=""
                android:textColor="#8ad6f1"
                android:textSize="13dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:background="@drawable/bg_home"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentStart="true"
            android:id="@+id/showcur">

            <RelativeLayout
                android:id="@+id/youxiaohuan"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/home_my_effective_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="- -"
                    android:textColor="#000000"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_my_effective_time"
                    android:layout_centerHorizontal="true"
                    android:text="目标：0&apos;00&apos;&apos;"
                    android:textColor="#836313"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/home_my_effective_time"
                    android:layout_centerHorizontal="true"
                    android:text="有效运动"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#836313"
                    android:textSize="12dp" />

                <com.example.maidongsp.mdadualtsport.circle.smallSeekCircle
                    android:id="@+id/smallseekCircle"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    seekcircle:max="100"
                    seekcircle:min="0"
                    seekcircle:progress="0"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="3dp"
                android:layout_height="135dp"

                android:layout_gravity="center_horizontal"
                android:background="#000"
                android:layout_alignTop="@+id/youxiaohuan"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/titlemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="27dp"
                android:text="   当前心率   "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#836313"
                android:textSize="12dp"
                android:layout_alignTop="@+id/text"
                android:layout_toEndOf="@+id/stepTimeTV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00：00：00"
                android:id="@+id/stepTimeTV"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/LBound"
                android:gravity="right"
                android:layout_below="@+id/text"
                android:layout_alignEnd="@+id/imageView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:layout_alignTop="@+id/LBound" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:id="@+id/UBound"
                android:layout_alignTop="@+id/LBound"
                android:layout_alignStart="@+id/imageView8" />

            <TextView
                android:id="@+id/ValidTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:text="--"
                android:textColor="#000000"
                android:textSize="32dp"
                android:layout_below="@+id/titlemark"
                android:layout_alignStart="@+id/titlemark"
                android:layout_alignEnd="@+id/titlemark"
                android:layout_marginTop="6dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="37dp"
                android:layout_height="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_heart_beat_l"
                android:layout_alignBottom="@+id/ValidTime"
                android:layout_toStartOf="@+id/ValidTime" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="37dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/img_heart_beat_r"
                android:layout_alignBottom="@+id/ValidTime"
                android:layout_toEndOf="@+id/ValidTime" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frameLayout"
                android:layout_alignBottom="@+id/text"
                android:layout_alignStart="@+id/imageView7"
                android:layout_alignEnd="@+id/imageView8"
                android:layout_below="@+id/titlemark"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/out"
                    android:layout_width="148dp"
                    android:layout_height="5dp"
                    android:layout_above="@+id/stepTimeTV"
                    android:layout_alignEnd="@+id/imageView3"
                    android:layout_gravity="bottom"
                    android:background="#FFDEAD" />

                <TextView
                    android:id="@+id/effect"
                    android:layout_width="90dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="#ffffff" />

                <ImageView
                    android:id="@+id/move"
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_gravity="left|center_vertical"
                    android:background="#aaff00" />
            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/showdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11">
