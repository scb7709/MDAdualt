<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f7ff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/listview_item_messagedetials_datalayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ebebeb"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listview_item_messagedetials_ricedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="早饭前"
            android:textSize="12dp"
            android:textColor="#999999" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/listview_item_message_contentlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/listview_item_messagedetials_medicinename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="早饭前"
            android:textSize="15dp"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/listview_item_messagedetials_medicinecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#999999" />


    </RelativeLayout>


</LinearLayout>
