<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">



    <android.support.v4.view.ViewPager
        android:id="@+id/clickpicchangebig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    <RelativeLayout
        android:id="@+id/clickpicchangebig_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:visibility="gone"
        android:alpha="100"
        android:background="#000">

        <Button
            android:id="@+id/clickpicchangebig_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:text="返回"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/clickpicchangebig_del"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/sharedelete" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/clickpicchangebig_layout"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"></LinearLayout>
</FrameLayout>