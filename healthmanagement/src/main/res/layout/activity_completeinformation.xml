<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffad00">

        <TextView
            android:id="@+id/activity_completeinformation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffad00"
            android:text="完善个人信息"
            android:textColor="#000000"
            android:textSize="20dp" />


        <RelativeLayout
            android:id="@+id/activity_completeinformation_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
          android:layout_centerVertical="true"
            android:layout_marginLeft="2dp">
            <Button
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_back" />
        </RelativeLayout>


        <TextView
            android:id="@+id/activity_completeinformation_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="#ffad00"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="18dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/frameLayout8"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:background="#ffad00">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@color/white"></View>


                <com.headlth.management.myview.CircleImageView
                    android:id="@+id/activity_completeinformation_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@mipmap/icon_camera"
                    android:background="@drawable/roundhand_shape"
                    ></com.headlth.management.myview.CircleImageView>
              <!--  <Button
                    android:id="@+id/activity_completeinformation_icon_bt"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/videoplay_shape"
                   ></Button>-->

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="@color/gray"></View>

            <LinearLayout
                android:id="@+id/activity_completeinformation_name_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="昵称"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_completeinformation_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"></View>

            <LinearLayout

                android:id="@+id/activity_completeinformation_birthday_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="出生年月"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_completeinformation_birthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:text="2000-01-01"

                    />

                <Button
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"></View>

            <LinearLayout
                android:id="@+id/activity_completeinformation_height_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="身高"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp"

                    />

                <TextView
                    android:id="@+id/activity_completeinformation_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:text="165"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:text="cm"

                    />
                <Button
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"></View>

            <LinearLayout
                android:id="@+id/activity_completeinformation_weight_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="体重"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_completeinformation_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:text="45"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:text="kg"

                    />
                <Button
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"></View>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_completeinformation_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/activity_completeinformation_sex_man"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/icon_sex_man"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="#2385e0"
                    android:textSize="15dp"

                    />

                <Button
                    android:id="@+id/activity_completeinformation_sex_woman"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/icon_sex"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"></View>

            <!--   <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"></View>-->

            <Button
                android:id="@+id/activity_completeinformation_bt_commit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/activite_login_selector"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></View>
        </LinearLayout>
    </ScrollView>
</LinearLayout>