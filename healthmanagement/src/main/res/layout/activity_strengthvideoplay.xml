<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/strength_video_play_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <!-- <io.vov.vitamio.widget.VideoView
            android:id="@+id/strength_video_play_VideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />-->
        <VideoView
            android:id="@+id/strength_video_play_VideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/strength_video_play_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/videoplay_back_shape"
            android:src="@drawable/icon_back"
            android:textColor="#fafafa"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/strength_video_play_parseOrplay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/videoplay_shape"
            android:src="@drawable/video_start" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/strength_video_play_count"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/videoplay_shape"
                android:gravity="center"
                android:text="20/20"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/strength_video_play_time"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/strength_video_play_rest_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/strength_videoplay_background"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="休息一下"
            android:textColor="@color/black"
            android:textSize="40sp"

            />

        <TextView
            android:id="@+id/strength_video_play_rest_time"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="60sp"

            />

    </LinearLayout>
</FrameLayout>