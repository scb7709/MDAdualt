<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include
        layout="@layout/view_publicctitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.headlth.management.myview.CarouselView
            android:id="@+id/activity_messagedetials_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:visibility="gone"></com.headlth.management.myview.CarouselView>

        <ImageView
            android:id="@+id/activity_messagedetials_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <!-- <android.support.v4.widget.SwipeRefreshLayout
         android:id="@+id/activity_messagedetials_SwipeRefreshLayout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="25dp">-->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_messagedetials_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@null"
        android:background="#f5f5f5"
        android:scrollbars="vertical" />
    <!-- </android.support.v4.widget.SwipeRefreshLayout>-->

</LinearLayout>